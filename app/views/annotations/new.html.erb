<h1>Add References</h1>
<h2>for <%= link_to @document.title, document_url(@document) %></h2>



<%= link_to "Done Adding References", document_url(@document) %>


<ul>
  <% @docs.each do |doc| %>
    <li>
      <%= link_to doc.title, document_url(doc) %>
      written by: <%= doc.author.email%>
      <br>
      <p>
        <%= doc.body %>
      <p>
        <%= render "form", document: doc, refs: true %>
        <br>
        <br>
    </li>

  <% end %>
</ul>
