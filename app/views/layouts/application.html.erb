<!DOCTYPE html>
<html>
<head>
  <title>GlossolHellYeah</title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <% if signed_in? %>
      <h2>Welcome <%= current_user.email %>!</h2>
    <% end %>


    <% if !flash[:errors].nil? %>
      <% flash[:errors].each do |error| %>
        <%= error %>
      <% end %>
    <% end %>
  </header>

<%= yield %>

</body>
</html>
