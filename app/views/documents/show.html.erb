<%= render "doc_info", doc: @document %>

<%= render "annotatings/anno_list", annotations: @document.annotations %>

<%= render "annotatings/form", document: @document, refs: false %>

<%= render "annotatings/ref_list",
            references: @document.references,
            current_author: current_user == @document.author %>

<% if current_user == @document.author %>
  <%= link_to "Add References", new_document_annotating_url(@document) %>
<% end %>
