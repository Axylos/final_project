<h1>Add References</h1>
<h2>for <%= link_to @document.title, document_url(@document) %></h2>

<h1>Existing References:</h1>

<ul>
  <% @document.annotated_docs.each do |annotation| %>
    <li>
      <%= link_to annotation.source_document.title, document_url(annotation.source_document)%>:
      <%= annotation.text_selection %>
    </li>
  <% end %>
</ul>

<%= link_to "Done Adding References", document_url(@document) %>

<%= render "ref_index", docs: @docs %>